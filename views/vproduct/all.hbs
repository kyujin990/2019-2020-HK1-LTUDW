<div class="p-5" style="background-color: #F5F5F5;">
    {{#each products}}
    <div class="overflow-hidden rounded ml-5 mr-5 p-5" style="background-color: white;">
        <div class="card rounded-lg h-100 mr-5 float-left"
            style="width: 260px; margin: 0.5rem; padding-top: 0.5rem; padding-bottom: 0.5rem;">
            <a href="/product/{{product_id}}"
                style="text-decoration: none; color: inherit;">

                <div class="d-flex justify-content-end">
                    <div class="position-absolute d-inline-flex p-2">
                        <div><img src="assets/Items/bid.jpg" alt="" class="rounded-circle"
                                style="height: 2rem; width: 2rem;">
                        </div>
                        <div class="font-weight-bold">
                            <p>100</p>
                        </div>
                    </div>
                </div>
                <img src="#" class="card-img-top" style="height: 200px" alt="...">
                <div class="list-group">
                    <div class=" d-flex justify-content-between" style="padding-right:10px; padding-left:10px; ">
                        <div>
                            <p class="font-weight-bold text-primary" style="margin-bottom: 0rem">{}</p>
                        </div>
                        <div>
                            <p style="color: red; margin-bottom: 0rem;">10.000.000 vnđ</p>
                        </div>
                    </div>
                    <p class="text-secondary" style="margin-left:10px;  margin-bottom: 0rem;">dec 5 2019</p>
                    <p class="font-weight-bold text-center text-danger border-bottom" style="margin-bottom: 0rem;">
                        00:00:00</p>
                    <div class="text-center" style="font-size: 18px;">
                        <p class="font-weight-bold" style="margin-bottom: 0rem;">{{product_name}}</p>

                        <div class=" d-flex justify-content-end">

                            <div class="position-absolute d-inline-flex" style="padding-right: 5px;">
                                <img src="assets/Items/heart.jpg" alt="" class="rounded-circle"
                                    style="height: 2rem; width: 2rem;"></div>
                        </div>

                        <p style="margin-bottom: 0rem; color: red;">15.000.000 vnđ</p>

                    </div>
                </div>
            </a>
        </div>
    </div>
    {{/each}}}}
</div>