<div class="w-100 h-100 p-5">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-6 card shadow bg-white rounded p-5">
                <img src="/public/assets/signin.gif" class="card-img-top rounded shadow-lg" alt="...">
                <h3 class="mx-auto mt-5 mb-5 font-weight-bold">SIGN IN</h3>
                {{#if err_message}}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    {{err_message}}
                </div>
                {{/if}}
                <form method="POST">
                    <div class="form-group mx-5">
                        <input type="text" class="form-control" placeholder="Username *" value="" name="username" autofocus/>
                    </div>
                    <div class="form-group mx-5">
                        <input type="password" class="form-control" placeholder="Password *" value="" name="password"/>
                    </div>
                    <div class="form-group mx-5 d-flex">
                        <button type="submit" class="btn btn-primary w-50 mr-3 rounded-pill">Join in</button>
                        <button type="button" class="btn btn-warning w-50 ml-3 rounded-pill" href="/signup">Register</button>
                    </div>
                    <div class="form-group mx-5">
                        <a href="#">Forget Password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>