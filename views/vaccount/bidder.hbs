{{#section 'css'}}
<link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}

{{#section 'js'}}
<script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script>
    $('#txtDOB').datetimepicker({
        format: 'd/m/Y',
        timepicker: false,
        mask: true,
    });
</script>
<script>
    function handlePassword(checkbox) {
        if (checkbox.checked == true) {
            $('#passwordBlock').removeClass('d-none');
        } else {
            $('#passwordBlock').addClass('d-none');
        }
    }
</script>
{{/section}}
<div class="container row">
    <div class="col-md-4 border-left mt-4 ">
        
    </div>
    <div class="col-md-8 mt-4 rounded p-5" style="background-color: #F5F5F5">
        <h3 class="mb-4">Infomation</h3>
        <form action="/account/profile" method="POST">
            <div class="form-group row mb-4">
                <label for="username" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-7 pr-5">
                    <input name="username" type="text" readonly class="form-control" value="{{user.uname}}">
                </div>
            </div>
            <div class="form-group row mb-4">
                <label for="fullname" class="col-sm-2 col-form-label">Fullname</label>
                <div class="col-sm-7 pr-5">
                    <input name="fullname" type="text" class="form-control" value="{{user.fullname}}">
                </div>
            </div>
            <div class="form-group row mb-4">
                <label for="email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-7 pr-5">
                    <input name="email" type="text" readonly class="form-control" value="{{user.email}}">
                </div>
            </div>
            <div class="form-group row mb-4">
                <label for="wantChangePassword" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-control custom-checkbox mr-sm-2">
                        <input id="wantChangePassword" type="checkbox" name="wantChangePassword"
                            class="custom-control-input" onchange="javascript: handlePassword(this);">
                        <label class="custom-control-label" for="wantChangePassword">Wanna change password</label>
                    </div>
                </div>
            </div>
            <div id="passwordBlock" class="d-none">
                <div class="form-group row mb-4 account-change-password">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Old password</label>
                    <div class="col-sm-7 pr-5">
                        <input type="password" name="old_password" class="form-control" id="inputPassword"
                            placeholder="Old password">
                    </div>
                </div>

                <div class="form-group row mb-4 account-change-password">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-7 pr-5">
                        <input type="password" name="password" class="form-control" id="inputPassword"
                            placeholder="New password">
                    </div>
                </div>

                <div class="form-group row mb-4 account-change-password">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Type again</label>
                    <div class="col-sm-7 pr-5">
                        <input type="password" name="confirm_password" class="form-control" id="inputPassword"
                            placeholder="Type your password again">
                    </div>
                </div>
            </div>
            <div class="form-group row mb-4">
                <label for="staticEmail" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <input type="submit" class="btn btn-sm m-0 btn-outline-warning form-control" value="Cập nhật">
                </div>
                <div class="col-sm-4 ">
                    <input type="submit" formaction="/account/request" {{#if wasRequested}}disabled{{/if}} class="btn btn-sm m-0 btn-outline-success form-control" value="Nâng cấp seller">
                </div>
            </div>
        </form>
    </div>
</div>