<div class="card">
  <div class="card-header">
    <h4>Category</h4>
  </div>
  <div class="card-body">
    <form method="POST">
      <div class="form-group">
        <label for="txtCatID">#</label>
        <input type="text" class="form-control" id="txtCatID" name="catId" readonly value="{{this.category.category_id}}">
      </div>
      <div class="form-group">
        <label for="txtCatName">Category</label>
        <input type="text" class="form-control" id="txtCatName" name="catTitle" autofocus
          value="{{this.category.category_title}}">
      </div>
      <a class="btn btn-outline-primary" href="/account/profile" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        List
      </a>
      <button type="submit" class="btn btn-outline-success" formaction="/category/update">
        <i class="fa fa-check" aria-hidden="true"></i>
        Update
      </button>
      <button type="submit" class="btn btn-outline-danger" formaction="/category/delete">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete
      </button>
    </form>
  </div>
</div>